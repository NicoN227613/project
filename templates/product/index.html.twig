{% extends "base.html.twig" %}

{% block body %}
{% for label, messages in app.flashes %}
{% for message in messages %}
<div class="{{ label }}">
    {{ message }}
</div>
{% endfor %}
{% endfor %}
<h1>{{'product.index.title' | trans }}</h1>
<a href="{{ path('app_product_new') }}">{{'product.action.new' | trans }}</a>
<ul>
    {% for product in products %}
    <li>{{ product.name }}</li>
    <a href="{{ path('app_product_show', { id: product.id }) }}">{{'product.action.see' | trans }}</a>
    {% endfor %}
</ul>
{% endblock body %}