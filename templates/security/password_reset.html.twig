{% extends 'base.html.twig' %}

{% block title 'Modifier votre mot de passe' %}

{% block body %}
<div class="form__container">
    {% if error %}
    <alert-message>
        {{ error.messageKey | trans(error.messageData, 'security') }}
    </alert-message>
    {% endif %}
    
    <form class="form" method="post">
        {{ form_start(form) }}
        <div class="form__group">
            <label for="inputEmail">Email</label>
        {{ form_widget(form.email, {attr : {class : 'form__control', 'autofocus': 'autofocus'}})}}
        {{ form_errors(form.email) }}
        </div>
        <div class="form__btn">
            <button type="submit" class="btn__submit">M'envoyer les instructions</button>
        <a href="{{ path('security_login') }}">Retour</a>
        </div>
        {{ form_end(form) }}
    </form>
</div>

{% endblock %}