{% extends "admin/base.html.twig" %}

{% block body %}
<div class="dashboard__title">
    {{ icon('pen') }}
    Gestion des produits
</div>
<div class="dashboard__card">
    <div class="dashboard__card__top">
        <form class="dashboard__search form__search">
            <input type="text" name="q" placeholder="Rechercher un produit">
        </form>
        <a href="#" class="dashboard__btn">Ajouter un produit</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Emplacement</th>
                <th>Quanité</th>
                <th>Unité</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            {% set link = path('app_admin_product_edit', {id: product.id}) %}
            <tr>
                <td><a href="{{ link }}">{{ product.id }}</a></th>
                <td><a href="{{ link }}">{{ product.name }}</a></th>
                <td>{{ product.classifiedIn.name }}</th>
                <td>{{ product.placeIn.name }}</th>
                <td>{{ product.quantity }}</th>
                <td>{{ product.units.name }}</th>
                <td>
                    <div class="dashboard__actions">
                        <a href="{{ link }}">{{ icon('edit')}}</a>
                        <a href="">{{ icon('trash')}}</a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}