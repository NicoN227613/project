{% extends "admin/base.html.twig" %}

{% block body %}
{{ form_start(form, { 'attr' : { 'class' : 'form'}})}}
{{ form_errors(form.email) }}
<div class="form__group">
    {{ form_widget(form.email, { 'attr' : { 'class' : 'form__control'}})}}
    <label for="inputEmail">{{ icon('email') }}</label>
</div>
{{ form_errors(form.password) }}
<div class="form__group">
    {{ form_widget(form.password, { 'attr' : { 'class' : 'form__control'} } ) }}
    <label for="inputPassword">{{ icon('password') }}</label>
</div>
{{ form_errors(form.roles) }}
<div class="form__group">
    {{ form_widget(form.roles, { 'attr' : { 'class' : 'form__control'} } ) }}
    <label for="inputRoles">{{ icon('admin') }}</label>
</div>
<button type="submit" class="btn__submit btn__text">Modifier{{ icon('arrow_right') }}</button>
{{ form_end(form)}}
{% endblock %}