{% extends "admin/base.html.twig" %}

{% block body %}
<div class="dashboard__title">
    {{ icon('category') }}
    {% trans %}Gestion des categories{% endtrans %}
</div>
<div class="dashboard__card">
    <div class="dashboard__header">
        {#<form class="dashboard__search form__search">
            <input type="text" name="q" placeholder="Rechercher un produit">
        </form>#}
        {{ form_start(form, { 'attr' : { 'class' : 'dashboard__search form__search'} })}}
        {{ form_end(form)}}
        <a href="{{ path('admin_category_new') }}" class="btn">{% trans %}Ajouter une categorie{% endtrans %}</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Nom{% endtrans %}</th>
                <th>{% trans %}Auteur{% endtrans %}</th>
                <th>{% trans %}Date de creation{% endtrans %}</th>
                <th>{% trans %}Date de modification{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td><a href="{{ path('admin_category_edit', {id: category.id}) }}">{{ category.id }}</a></td>
                <td><a href="{{ path('admin_category_edit', {id: category.id}) }}">{{ category.name }}</a></td>
                <td>{{ category.author.email }}</td>
                <td>{{ category.createdAt | date('d F Y') }}</td>
                <td>{{ category.updatedAt | date('d F Y H:i') }}</td>
                <td>
                    <div class="dashboard__actions">
                        <a href="{{ path('admin_category_edit', {id: category.id}) }}">{{ icon('edit')}}</a>
                        <form method="POST" action="{{ path('admin_category_delete', {id: category.id}) }}" onsubmit="return confirm({% trans %}'Etes-vous sur de supprimer cette catÃ©gorie ?'{% endtrans %})">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button>{{ icon('trash')}}</button>
                        </form>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(categories) }}
</div>

{% endblock %}