{% extends "admin/base.html.twig" %}

{% block body %}
<div class="dashboard__title">
    {{ icon('balance') }}
    Gestion des unités
</div>
<div class="dashboard__card">
    <div class="dashboard__card__top">
        {#<form class="dashboard__search form__search">
            <input type="text" name="q" placeholder="Rechercher un produit">
        </form>#}
        {{ form_start(form, { 'attr' : { 'class' : 'dashboard__search form__search'} })}}
        {{ form_end(form)}}
        <a href="{{ path('admin_unity_new')}}" class="btn">Ajouter une unité</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Auteur</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for unity in units %}
            <tr>
                <td>{{ unity.id }}</td>
                <td>{{ unity.name }}</td>
                <td>{{ unity.author.email }}</td>
                <td>{{ unity.createdAt | date('d F Y') }}</td>
                <td>{{ unity.updatedAt | date('d F Y H:i') }}</td>
                <td>
                    <div class="dashboard__actions">
                        <a href="{{ path('admin_unity_edit', {id: unity.id}) }}">{{ icon('edit')}}</a>
                        <form method="POST" action="{{ path('admin_unity_delete', {id: unity.id}) }}" onsubmit="return confirm('Etes-vous sur de supprimer cette unité ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ unity.id) }}">
                            <button>{{ icon('trash')}}</button>
                        </form>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(units) }}
</div>

{% endblock %}