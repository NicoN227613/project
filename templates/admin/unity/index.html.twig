{% extends "admin/base.html.twig" %}

{% block body %}
<div class="dashboard__title">
    {{ icon('balance') }}
    {% trans %}Gestion des unités{% endtrans %}
</div>
<div class="dashboard__card">
    <div class="dashboard__header">
        {#<form class="dashboard__search form__search">
            <input type="text" name="q" placeholder="Rechercher un produit">
        </form>#}
        {{ form_start(form, { 'attr' : { 'class' : 'dashboard__search form__search'} })}}
        {{ form_end(form)}}
        <a href="{{ path('admin_unity_new')}}" class="btn">{% trans %}Ajouter une unité{% endtrans %}</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Nom{% endtrans %}</th>
                <th>{% trans %}Auteur{% endtrans %}</th>
                <th>{% trans %}Date de création{% endtrans %}</th>
                <th>{% trans %}Date de modification{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for unity in units %}
            <tr>
                <td><a href="{{ path('admin_unity_edit', {id: unity.id}) }}">{{ unity.id }}</a></td>
                <td><a href="{{ path('admin_unity_edit', {id: unity.id}) }}">{{ unity.name }}</a></td>
                <td>{{ unity.author.email }}</td>
                <td>{{ unity.createdAt | date('d F Y') }}</td>
                <td>{{ unity.updatedAt | date('d F Y H:i') }}</td>
                <td>
                    <div class="dashboard__actions">
                        <a href="{{ path('admin_unity_edit', {id: unity.id}) }}">{{ icon('edit')}}</a>
                        <form method="POST" action="{{ path('admin_unity_delete', {id: unity.id}) }}" onsubmit="return confirm({% trans %}'Etes-vous sur de supprimer cette unité ?'{% endtrans %})">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ unity.id) }}">
                            <button>{{ icon('trash')}}</button>
                        </form>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(units) }}
</div>

{% endblock %}